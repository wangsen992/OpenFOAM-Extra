momentumSource
{
		type							coded;

		selectionMode			all;

		field							U;

		codeInclude
		#{
		#};

		codeAddSup
		#{
				Pout << "**codeAddSup**" << endl;
		#};

		codeAddRhoSup
		#{
				Pout << "**codeAddRhoSup**" << endl;
				const Time& time = mesh().time();
				const scalarField& V = mesh().V();
				vectorField& USource = eqn.source();
				vector Fu(0, 0, 0);
				USource += rho * V* Fu;
		#};

		codeAddAlphaRhoSup
		#{
				Pout << "**codeAddAlphaRhoSup**" << endl;
		#};
}


